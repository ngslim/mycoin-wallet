<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">

<div class='login-container'>
  <div class='login-card'>
    <h1 style="font-family: 'Lobster', cursive; 
    background: -webkit-linear-gradient(#b848ff, #704bff); -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;">My Coin</h1>
    {{#if message}}
      <div class='alert alert-danger alert-dismissible fade show' role='alert'>
        {{message}}
        <div
          type='button'
          class='btn-close'
          data-bs-dismiss='alert'
          aria-label='Close'
        ></div>
      </div>
    {{/if}}
    <h3>Login with password</h2>
    <form method='post' action='/verify' id='login-form'>
      <div class='form-control'>
        <input
          id='password'
          name='password'
          type='password'
          placeholder='password'
        />
        <small></small>
        <span></span>
      </div>
      <div class='d-flex justify-content-center'>
        <button class='bg-variant' type='submit'>Login</button>
      </div>
      <div class='register-link'>New user?
        <a style="font-weight:500;" href='/register'>Register</a></div>
    </form>
  </div>
</div>